<?xml version="1.0" encoding="utf-8" standalone="no"?>
<application xmlns="http://ns.adobe.com/air/application/2.0">
	<id>com.oscararevalo.bugLog.BugLogMini</id>
	<name>BugLogMini</name>
	<filename>BugLogMini</filename>
	<version>0.5</version>
	<description>BugLogMini connects to a BugLog server and displays newly received bug reports on the desktop</description>
	<copyright>(c) 2008 - Oscar Arevalo</copyright>

	<initialWindow>
		<title>BugLogMini</title>
		<content>bugLogMini.html</content>
		<systemChrome>none</systemChrome>
		<transparent>true</transparent>
		<visible>true</visible>
		<minimizable>true</minimizable>
		<resizable>true</resizable>
		<minSize>270 360</minSize>
		<maxSize>500 600</maxSize>
		<width>310</width>
		<height>460</height>
	</initialWindow>
  
	<icon>
		<image16x16>icons/bug_16.png</image16x16>
		<image32x32>icons/bug_32.png</image32x32>
		<image48x48>icons/bug_48.png</image48x48>
		<image128x128>icons/bug_128.png</image128x128>
	</icon>
    
	<fileTypes />

</application>
